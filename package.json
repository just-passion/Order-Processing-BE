{
  "name": "order-notification-backend",
  "version": "1.0.0",
  "description": "Real-time order notification system with Kafka, Redis, and WebSocket support",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
